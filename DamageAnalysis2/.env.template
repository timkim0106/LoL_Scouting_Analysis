# League of Legends Analytics Configuration
# Copy this file to .env and fill in your actual values

# Riot Games API
RIOT_API_KEY=your_riot_api_key_here
RIOT_REGION=americas

# Database (optional)
DATABASE_URL=sqlite:///lol_analytics.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/analytics.log

# Rate Limiting
API_RATE_LIMIT=50  # requests per second
API_TIMEOUT=30     # seconds